/* pages/questionDetail/questionDetail.wxss */
.wrapper {
  height: calc(100vh);
  background-color: rgba(64, 97, 132, 0.3);
}

.selectedExercise {
  position: absolute;
  top: 10%;
  left: 5%;
}

.exerciseTitle {

  height: 60rpx;
  line-height: 60rpx;
  float: left;
}

.exerciseInput {
  display: inline-block;
  background-color: #efeff4;
  box-shadow: inset 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  opacity: 0.6;
  width: 123rpx;
  height: 56rpx;
}

.exerciseInput input {

  width: 58rpx;
  margin-left: 14rpx;
  float: left;
  margin-top: 8rpx;
}

.exerciseInput image {
  width: 50rpx;
  height: 50rpx;
  float: left;
}

.middle {
  position: absolute;
  width: 95%;
  height: auto;
  background-color: rgba(239, 239, 244, .7);
  top: 15%;
  left: 2.5%;
}

.left {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 190rpx;
  left: 5rpx;
}

.leftIcon {
  width: 80rpx;
  height: 80rpx;
}

.right {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 190rpx;
  right: 5rpx;
}

.rightIcon {
  width: 80rpx;
  height: 80rpx;
}

.stuImg image {
  width: 100%;
}

.putScore {
  background-color: rgb(239, 239, 244, 0);

  width: 400rpx;

  float: right;
}

.putScore text {
  text-align: center;
    width: 400rpx;
    height: 88rpx;
    line-height: 80rpx;
    float: left;
}

.input {
  background-color: #efeff4;
  box-shadow: inset 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.5);
  border-radius: 10rpx;
  opacity: 0.6;
  width: 75rpx;
  height: 75rpx;
  /* float: left; */
  margin-bottom: 20rp;
  display: inline-block;
}

.input input {
  padding: 5rpx 5rpx;
  clear: both;
  display: block;
  line-height: 100rp;
  width: 75rpx;
  height: 75rpx;
}

.answerTitle{
  position: absolute;
    top: 56%;
    left: 5%;
}

.answer{
  position: absolute;
    top: 60%;
    width: 95%;
    height: 400rpx;
    background-color: rgba(239, 239, 244, .7);
    left: 2.5%;
}