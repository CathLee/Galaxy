/* pages/changeAnswer/changeAnswer.wxss */
.wrapper {
  height: calc(100vh);
  background-color: rgba(64, 97, 132, 0.3);
}


.submit {
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #efefef;
  text-align: center;
  line-height: 120rpx;
  bottom: 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #27455e;
}

.inner {
  background-color: rgba(239, 239, 244, .8);
  width: 95%;
  height: 1000rpx;
  margin-left: 2.5%;
  position: absolute;
  top: 10%;
}

.pic {
  width: 95%;
  margin: 2.5%;
  height: 800rpx;
}

.getPic {
  width: 95%;
  height: 200rpx;
  margin-left: 2.5%;
}

.picIcon {
  width: 125rpx;
  height: 125rpx;
}