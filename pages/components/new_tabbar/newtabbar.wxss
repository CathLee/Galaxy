/* pages/components/new_tabbar/newtabbar.wxss */
.c_tabbar {
  bottom: 0;
  position: fixed;
  height: 120rpx;
  border-top: 1px solid #dcdcdc;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #999;
  background-color: #efeff4;
  padding: 0;
}

.c_tabbar .tabbar_item .tabbar_item_title {
  margin-top: 10rpx;
  color: black;
  font-size: 35rpx;
  font-weight: bold;
}

.selected {
  border-top: 12rpx solid #7ecef4;
  margin-top: -12rpx;
}

.c_tabbar .tabbar_item {
  font-size: 35rpx;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.c_tabbar .tabbar_item .tabbar_item_img {
  width: 53rpx;
  height: 52rpx;
}

/* big icon */
.c_tabbar .tabbar_item_img.big {
  width: 95rpx;
  height: 95rpx;
}

/* overflow icon */
.c_tabbar .tabbar_item_img.overflow {
  position: fixed;
  bottom: 25rpx;
}

/* shadow icon */
.c_tabbar .tabbar_item_img.shadow {
  -moz-box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
  -webkit-box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.5);
}

/* circle icon */
.c_tabbar .tabbar_item_img.circle {
  border-radius: 50%;
}

page {
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
  margin: 0 0 120rpx 0;
  padding: 0;
}

.wrapper {
  display: flex;
  align-items: center;
  height: 100rpx;
}
.circle{
  display: flex;
    justify-content: center;
    color: #fff;
  position: absolute;
    top: 30rpx;
    right: 100rpx;
    bottom: 0;
    width: 40rpx;
    height: 40rpx;
    background-color: #577493;
    border-radius: 50%;
}