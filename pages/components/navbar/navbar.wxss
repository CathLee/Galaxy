/* pages/components/navbar/navbar.wxss */
/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */
.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  background: #efeff4;
  color: #000;
  z-index: 9999999;
}

/* 标题要居左 */
.nav-title {
  position: absolute;
  /* text-align: center; */
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 50rpx;
  right: 0;
  bottom: 0;
  margin-left: 30rpx;
  font-family: AdobeHeitiStd-Regular;
  font-size: 36rpx;
  color: #2c2b2b;
  font-weight: 600;
}
.nav-back{
  width: 100rpx;
  height: auto;
  position: absolute;
  top: 2px;
  left: 10px;
  bottom: 0;
  right: 0;
}
.nav-capsule {
  width: 50rpx;
  height: 50rpx;
}