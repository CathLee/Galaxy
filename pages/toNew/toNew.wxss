/* pages/toNew/toNew.wxss */
.wrapper {
  height: calc(100vh);
  background-color: rgba(64, 97, 132, 0.3);
}

.inner {
  position: absolute;
  z-index: 1000;
  top: 15%;
  left: 10%;
  width: 80%;
  height: 400rpx;
}

.inputName input {
  padding-left: 20rpx;
  width: 470rpx;
  height: 80rpx;
  background-color: rgba(239, 239, 244, .3);
  border-radius: 30rpx;
  border: solid .5rpx rgb(136, 131, 132);
  box-shadow: 0rpx 1rpx 1rpx 0rpx rgba(0, 0, 0, 0.25), inset 0rpx 0rpx 2rpx 0rpx rgba(0, 0, 0, 0.29);
  margin: 30rpx 0rpx;
}

.submitName {
  width: 33%;
  height: 80rpx;
  background-color: rgba(110, 147, 185, 0.8);
  color: #fff;
  text-align: center;
  vertical-align: middle;
  line-height: 80rpx;
  border-radius: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 400;
}



/* 遮罩 */
.shade {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.75);
  z-index: 10;
}
.shade_box {
  position: fixed;
  top: 40px;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  z-index: 11;
  min-width: 200rpx;
  min-height: 200rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;
  letter-spacing: 0;
  word-wrap: break-word;

  animation-name:popup;
  animation-duration:0.2s;
  animation-timing-function:linear;
  animation-delay:0;
  animation-iteration-count:1;
  animation-direction:normal;
}

@keyframes popup
{
  from{opacity:0;transform:scale(0.3,0.3);}
  to 	{opacity:1;transform:scale(1,1);}
}


