/* pages/homework/homework.wxss */
.container {
  width: 95%;
  height: calc(100vh);
  margin-top: 285rpx;
  margin: auto;
  /* box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.98); */
  /* background-color: rgba(64, 97, 132, 0.3); */
}



.left-hand {
  width: 49%;
  float: left;
    height:auto ;
    background-color: rgba(239, 239, 244, 1);
    margin-top: 30rpx;
    border-radius: 30rpx;

}



.right-hand {
  float: left;
    width: 47%;
    height:auto;
    margin-left: 20rpx;
    background-color: rgba(239, 239, 244, 1);
    margin-top: 30rpx;
    border-radius: 30rpx;
}





.goTop {
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 150rpx;
  /* background: rgba(0,0,0,.3); */
  left: 30rpx;
  border-radius: 50%;
}
.titleInner{
  width: 90%;
    height: 100rpx;
    margin: 20rpx auto;
    font-stretch: normal;
}

.title{
  font-size: 35rpx;
    color: #2d5278;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.deadline{
  font-family: SourceHanSansCN-Regular;
    font-size: 23rpx;
    font-weight: bold;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #797c7f;
}

.label{
  width: 90%;
    height: 100rpx;
    margin: 20rpx auto;
    font-stretch: normal;
    background-color: rgba(239, 239, 244, .7);
    box-shadow: 0px 3rpx 7rpx 0rpx rgba(0, 0, 0, 0.35);
    border-radius: 30rpx;
}
.keshiTitle{
  width: 290rpx;
  height: 50rpx;
  overflow:hidden;
  font-size: 35rpx;
  color: #2d5278;
  font-weight: bold;
  margin-bottom: 10rpx;
  padding-top: 5rpx;
  padding-left: 20rpx;
}
.time{
  font-family: SourceHanSansCN-Regular;
  font-size: 23rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #797c7f;
  padding-left: 20rpx;
}
.costWrapper{
  float: left;
    margin-top: 30rpx;
    width: 100%;
    height: auto;
    background-color: #efefef;
    border-radius: 30rpx;
}
.costTitleInner{
  padding: 20rpx 30rpx;
    height: 85rpx;
}
.costTitle{
  margin-bottom: 10rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #2d5278;
}
.costDetail{
  padding: 20rpx 30rpx;
  font-family: SourceHanSansCN-Bold;
	font-size: 35rpx;
	font-weight: normal;
	font-stretch: normal;
	font-weight: bold;
	letter-spacing: 0px;
	color: #47607c;
}
.total{
  padding: 20rpx 30rpx 60rpx;
    font-size: 35rpx;
    color: #47607c;
    font-weight: bold;
}