/* pages/toJoin/toJoin.wxss */
.wrapper {
  position: relative;
  z-index: 0;
  height: calc(100vh);
  background-color: rgba(64, 97, 132, 0.3);
}

.inner {
  position: absolute;
  z-index: 1000;
  top: 15%;
  left: 10%;
  width: 80%;
  height: 400rpx;
}

.classInner {
  float: left;
  width: 45%;
  background-color: rgba(239, 239, 244, .7);
  height: 200rpx;
  border-radius: 30rpx;
  margin-bottom: 2.5%;
  margin-right: 3.5%;
}

.className {
  text-align: center;

  font-family: SourceHanSansCN-Regular;
  font-size: 31rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #2d5278;
  height: 65rpx;
  line-height: 90rpx;
}

.classTeacher {
  margin-bottom: 25rpx;
  text-align: center;
  font-family: SourceHanSansCN-Regular;
  font-size: 23rpx;
  font-weight: bold;
  font-stretch: normal;
  letter-spacing: 0px;
  color: #a0a0a0;
}

.application {
  width: 150rpx;
  height: 60rpx;
  background-color: #6e93b9;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  vertical-align: middle;
  margin: auto;
}

.allClass {
  margin-top: 50rpx;
}


/* 遮罩 */
.shade {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.35);
  z-index: 10;
}

.shade_box {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  z-index: 11;
  min-width: 200rpx;
  min-height: 200rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #333;
  font-family: Helvetica, "Helvetica Neue", Arial, sans-serif;
  letter-spacing: 0;
  word-wrap: break-word;

  animation-name: popup;
  animation-duration: 0.2s;
  animation-timing-function: linear;
  animation-delay: 0;
  animation-iteration-count: 1;
  animation-direction: normal;
}

@keyframes popup {
  from {
    opacity: 0;
    transform: scale(0.3, 0.3);
  }

  to {
    opacity: 1;
    transform: scale(1, 1);
  }
}


/* 当前弹窗样式 */
