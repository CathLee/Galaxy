/* pages/gotoCorrect/gotoCorrect.wxss */
.wrapper {
  background-color: rgba(64, 97, 132, 0.3);
  height: calc(100vh);
  margin-top: 110rpx;
}

.inner {
  width: 95%;
  height: 800rpx;
  position: absolute;
  top: 8%;
  left: 2.5%;
}

.choose {
  width: 100%;
  height: 365rpx;
  position: relative;
}

.title {
  display: block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  color: #4b4747;
  font-weight: bold;
}

.boxInner {
  background-color: #efeff4;
  width: 100%;
  height: 285rpx;
}

.img {
  width: 190rpx;
  height: 250rpx;
  background-color: #efeff4;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  box-shadow: -2rpx 2rpx 7rpx 0rpx rgba(0, 0, 0, 0.3);
}

.chooseDetail {
  display: inline-block;
  height: 265rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
  color: #8c8c8c;
}

.left {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 150rpx;
  left: 5rpx;
}

.leftIcon {
  width: 80rpx;
  height: 80rpx;
}

.right {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  top: 150rpx;
  right: 5rpx;
}

.rightIcon {
  width: 80rpx;
  height: 80rpx;
}
.optionsCorrect{
  margin-top: 20rpx;
}

.anay {
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #efefef;
  text-align: right;
  line-height: 120rpx;
  bottom: 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #27455e;
}