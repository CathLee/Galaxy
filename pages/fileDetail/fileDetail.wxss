/* pages/fileDetail/fileDetail.wxss */
.wrapper {
  margin-top: 15%;
  height: calc(100vh);
  background-color: rgba(64, 97, 132, 0.3);
}

.sourceInner {
  padding-top: 50rpx;
  width: 95%;
  height: auto;
  margin: auto;
}

.addSource {
  margin-top: 20rpx;
  margin-left: 10rpx;
  display: inline-block;
  float: left;
  width: 30%;
  height: 180rpx;
  background-color: rgba(239, 239, 244, .7);
  border-radius: 30rpx;
}


.delete {
  position: absolute;
  width: 100%;
  height: 120rpx;
  background-color: #efefef;
  text-align: center;
  line-height: 120rpx;
}

.addPic {
  width: 100rpx;
  height: 100rpx;
  margin: auto;
  display: block;
  padding-top: 30rpx;
}

.addTitle {
  text-align: center;
  font-size: 30rpx;
  color: #2d5278;
  font-weight: 600;
}

.list {
  margin-top: 20rpx;
  margin-left: 10rpx;
  display: inline-block;
  float: left;
  width: 30%;
  height: 180rpx;
  background-color: rgba(239, 239, 244, .7);
  border-radius: 30rpx;
}

.title {
  font-size: 30rpx;
  color: #2d5278;
  font-weight: 600;
  padding: 20rpx 20rpx 0;
}

.time {
  font-size: 19rpx;
  color: #797c7f;
  padding: 0 20rpx
}

.sourceDelete {
  width: 100rpx;
  color: red;
  font-size: 25rpx;
  font-weight: bold;
  float: right;
}