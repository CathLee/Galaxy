/* pages/completion/completion.wxss */
.wrapper {
  background-color: rgba(64, 97, 132, 0.3);
  height: calc(100vh);
  margin-top: 110rpx;
}

.inner {
  width: 95%;
  height: 800rpx;
  position: absolute;
  top: 8%;
  left: 2.5%;

}




.inner_left {
  width: 48%;
  height: 800rpx;

  float: left;
}

.inner_left text {
  font-size: 32rpx;
  color: #090909;
  opacity: 0.8;
  margin-left: 30rpx;
}

.doneInner {
  background-color: rgba(239, 239, 244, 0.8);
  width: 100%;
  height: auto;
  padding-top: 20rpx;
  margin-top: 15rpx;
}

.doneDetail {
  height: 80rpx;
  width: 90%;
  margin: 2% 5%;
  border-bottom: 2rpx #d9d9d9 solid;
}

.doneCircle {
  color: #fff;
  vertical-align: middle;
  line-height: 65rpx;
  width: 70rpx;
  height: 70rpx;
  background-color: #5686a6;
  border-radius: 50%;
  float: left;
  margin: 2.5rpx;
}

.doneStu {
  float: left;
  margin-top: 15rpx;
  color: #9b9797;
}

.inner_right {
  width: 48%;
  height: 800rpx;


  float: right;
}

.anay {
  position: fixed;
  width: 100%;
  height: 120rpx;
  background-color: #efefef;
  text-align: right;
  line-height: 120rpx;
  bottom: 0;
  font-size: 40rpx;
  font-weight: bold;
  color: #27455e;
}

.notdoneCircle{
  color: #fff;
    vertical-align: middle;
    line-height: 65rpx;
    width: 70rpx;
    height: 70rpx;
    background-color: #bfbfbf;
    border-radius: 50%;
    float: left;
    margin: 2.5rpx;
}

.inner_right text{
  font-size: 32rpx;
    color: #090909;
    opacity: 0.8;
    margin-left: 30rpx;
}